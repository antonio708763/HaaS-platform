# -------------------------------
# Immich Database (PostgreSQL + pgvector)
# -------------------------------
# Immich uses DB_* variables to connect.
DB_HOSTNAME=database
DB_USERNAME=postgres
DB_PASSWORD=change_me_secure_password
DB_DATABASE=immich

# Postgres container uses POSTGRES_* variables on first initialization.
# Keep these values aligned with DB_* above.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=immich

# -------------------------------
# Redis
# -------------------------------
REDIS_HOSTNAME=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------
# Immich Configuration
# -------------------------------
IMMICH_VERSION=release

# Logging
# Valid values: verbose, debug, log, warn, error, fatal
IMMICH_LOG_LEVEL=log

# Upload location inside container (compose maps ./library -> /usr/src/app/upload)
UPLOAD_LOCATION=/usr/src/app/upload

# Machine Learning
MACHINE_LEARNING_ENABLED=true

# External URL (reverse proxy). Use your Caddy hostname.
IMMICH_WEB_URL=https://immich.local

# GPU Acceleration (AMD radeon/r600 - optional)
LIBVA_DRIVER_NAME=r600

# Security
# Use a long random secret (example command: openssl rand -hex 32)
JWT_SECRET=change_me_with_openssl_rand_hex_32
